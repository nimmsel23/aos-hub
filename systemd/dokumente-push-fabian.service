[Unit]
Description=Dokumente push to fabian (GDrive)
After=network-online.target
Wants=network-online.target

[Service]
Type=oneshot
ExecStart=/bin/bash -lc 'rclone copy --update --skip-links --create-empty-src-dirs --backup-dir "fabian:MeineAblage/Dokumente-backups/push-$(date +%%Y%%m%%d-%%H%%M%%S)" "%h/Dokumente" "fabian:MeineAblage/Dokumente"'
