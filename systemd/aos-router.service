[Unit]
Description=AOS Hub - Router Bot (Telegram router with extensions)
After=network.target

[Service]
Type=simple
User=alpha
WorkingDirectory=/home/alpha/aos-hub/router
ExecStart=/usr/bin/python /home/alpha/aos-hub/router/router_bot.py
Restart=on-failure
RestartSec=10

[Install]
WantedBy=multi-user.target
