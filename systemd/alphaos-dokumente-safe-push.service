[Unit]
Description=Daily Dokumente safe rclone push (copy, skip symlinks)
After=network-online.target
Wants=network-online.target

[Service]
Type=oneshot
ExecStart=%h/aos-hub/scripts/sync-utils/rclone-dokumente-safe-push.sh
WorkingDirectory=%h
Environment=HOME=%h
Environment=PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:%h/.local/bin
ExecCondition=/bin/test -f %h/.config/rclone/rclone.conf
TimeoutStartSec=10h
